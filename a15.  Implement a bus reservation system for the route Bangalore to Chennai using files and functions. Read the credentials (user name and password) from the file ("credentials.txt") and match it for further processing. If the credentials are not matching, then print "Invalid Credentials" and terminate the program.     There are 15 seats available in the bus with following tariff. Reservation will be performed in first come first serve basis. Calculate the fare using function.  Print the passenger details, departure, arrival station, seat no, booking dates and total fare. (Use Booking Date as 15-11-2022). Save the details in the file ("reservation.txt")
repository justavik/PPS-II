#Elaboration on above: My teacher has not provided test cases yet; and when running this on a friend's moodle, I see that they are accessing the portal twice, as in the example provided, while my code is for one access only, so will have to update it, which is highly unlikely for my stupid brain.
from datetime import date
f = open(r"C:\Users\LENOVO\credentials.txt", 'r')
l = []
for x in f:
    l.append(x)
uname = l[0]
pw = l[1]
f.close()
abc = input()
pwd = input()
if (abc != uname) or (pwd != pw):
    exit
n = int(input())
c = input()
loc = {
    "Hosur" : 75.00,
    "Vaniyambadi" : 250.00,
    "Vellore" : 500.00,
    "Walaja" : 600.00,
    "Chennai" : 750.00}
p = int(input())
al = []
pl = []
for i in range(p):
    name_age = input()
    pl.append(name_age)
    al += name_age.split(",")
if n == 1:
    f = 0.00
    d = input()
    g = loc.get(d)
    if c == 'A':
        for e in range(1, len(al), 2):
            if int(al[e]) >= 60:
                f += g * 0.90
            else:
                f += g
    if c == 'B':
        for e in range(1, len(al), 2):
            if int(al[e]) >= 60:
                f += (g + 100.00) * 0.90
            else:
                f += (g + 100.00)
dt = input()
ldt = list(reversed(dt.split("-")))
if n == 2:
    cd = input()
    lcd = list(reversed(cd.split("-")))
    dt = date(int(ldt[0]), int(ldt[1]), int(ldt[2]))
    cd = date(int(lcd[0]), int(lcd[1]), int(lcd[2]))
    no = (cd - dt).days
    if no >= 20:
        ref = f
    elif 14 <= no < 20:
        ref = 0.9 * f
    elif 7 <= no < 14:
        ref = 0.8 * f
    elif 4 <= no < 7:
        ref = 0.5 * f
    else:
        ref = 0
if n == 3:
    exit
ff = open(r"C:\Users\LENOVO\reservation.txt", 'w')
ff.write("Remaining Seats:\n")
if c == 'A':
    reg = "Regular = " + str(12 - p)
    ff.write(reg)
    ff.write("\nTatkal = 3")
elif c == 'B':
    ff.write("Regular = 12\n")
    tat = "Tatkal = " + str(3 - p)
    ff.write(tat)
ff.write("\nPassessnger Name - Age - Source - Destination - Seat No")
l = []
for x in pl:
    l.append(x.split(", "))
seat = 15
for j in l:
    jj = str(" - ".join(j)) + " - Bengaluru - " + str(d)
    w = jj + " - " + str(seat) + "\n"
    ff.write(w)
    seat -= 1
dd = "Date of Journey: " + str(dt) + "\n"
ff.write(dd)
fare = "total fare = Rs. " + str(f) + "\n"
ff.write(fare)
ff.close()
ff = open(r"C:\Users\LENOVO\reservation.txt", 'r')
print(ff.read())
